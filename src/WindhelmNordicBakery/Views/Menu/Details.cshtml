@model Product

@{
    ViewData["Title"] = "Details";
}


<div class="container">
<h2>@Model.Name</h2>
    <img class="menu-quicklinks" alt="@Model.Name" src="/images/product/@Model.ImageFile">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
        <div class="addToCart">
            <div class="button">
                <a class="btn btn-gold btn--gold--large"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-productId="@Model.Id">Add to Cart!</a>
            </div>
        </div>
    </div>
</div>
