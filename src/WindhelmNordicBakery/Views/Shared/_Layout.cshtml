<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WindhelmNordicBakery</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Castoro:ital@0;1&family=Raleway:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/stylesheet.css" />

</head>
<body>
    <header class="sticky-top">
        <nav class="navbar bg-gold py-0 navbar-expand-sm">
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="nav navbar-nav ml-auto">
                    <li class="nav-item pipe-seperator">
                        <a class="nav-link text-white" asp-area="" asp-controller="" asp-action="">Login</a>
                    </li>
                    @await Component.InvokeAsync("ShoppingCartSummary")
                </ul>
            </div>
        </nav>
        <nav class="navbar navbar-light bg-cream navbar-expand-md justify-content-between">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-nav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse dual-nav w-50 order-1 order-md-0">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item mx-lg-5 mx-md-4 mx-sm-0">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Bakery</a>
                        </li>
                        <li class="nav-item mx-md-0 mx-sm-0">
                            <a class="nav-link d-md-none d-sm-block" asp-area="" asp-controller="Menu" asp-action="ProductProductList">Menu</a>
                        </li>
                        <li class="dropdown nav-item mx-lg-5 mx-md-4 mx-sm-0">
                            <a class="dropdown-toggle nav-link" data-toggle="dropdown" href="#">Menu<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" asp-area="" asp-controller="Menu" asp-action="ProductList">All</a></li>
                                <li><a class="nav-link" asp-area="" asp-controller="" asp-action="">Gifts</a></li>
                                <li><a class="nav-link" asp-area="" asp-controller="" asp-action="">Bread</a></li>
                                <li><a class="nav-link" asp-area="" asp-controller="" asp-action="">Cakes & Cupakes</a></li>
                                <li><a class="nav-link" asp-area="" asp-controller="" asp-action="">Cookies & Squares</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="mx-auto d-block order-0 order-md-1">
                    <img class="" src="/images/logo_250_v.png" width="175" height="60">
                </a>
                <div class="navbar-collapse collapse dual-nav w-50 order-2">
                    <ul class="nav navbar-nav mr-auto">
                        <li class="nav-item mx-lg-5 mx-md-4 mx-sm-0">
                            <a class="nav-link" href="#">Gallery</a>
                        </li>
                        <li class="nav-item mx-lg-5 mx-md-4 mx-sm-0">
                            <a class="nav-link" href="#">Faq</a>
                        </li>
                        <li class="nav-item d-sm-none d-block">
                            <a class="nav-link" asp-controller="ShoppingCart" asp-action="Index">Cart<i class="fas fa-shopping-cart ml-2"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div class="email-block bg-gold py-3">
        <form class="container-fluid d-flex justify-content-center">
            <div class="form-row">
            <label class="text-white ml-1" for="exampleInputEmail1">Join for exclusive offers!</label>
                <div class="col-9 col-md-10">
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter your email">
                </div>
                <div class="col-2">
                    <input class="btn btn-dark" type="submit" value="Join!">
                </div>
            </div>
        </form>
    </div>
    <footer class="container-fluid bg-dark border-top text-light p-5">
        <div class="row justify-content-center mb-3">
            <img src="~/images/logo_250_v.png" alt="Windhelm bakery"/>
        </div>
        <hr class="hr-gold my-4"/>
        <div class="row justify-content-center mb-3">
            <a href="https://github.com/Carlos43525" class="text-light text-center"><i class="fab fa-github fa-3x"></i></a>
        </div>
        <div class="row justify-content-center footer-text mb-1">
            Site by Carlos Rodriquez Jr.
        </div>
        <div class="row justify-content-center footer-text">
            carlos43525@gmail.com
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/ad3773c8b2.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

